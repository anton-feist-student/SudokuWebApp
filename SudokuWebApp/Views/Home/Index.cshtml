@model BoardViewModel

<table id="grid" border="1" style="border-collapse: collapse;">
    @for(int i = 0; i < Model.Numbers.Length; ++i)
    {
    <tr>
        @for (int j = 0; j < Model.Numbers[i].Length; ++j)
        {
            @if (Model.Visibility[i][j])
            {
                <td><input type="text" class="cell" maxlength="1" value="@Model.Numbers[i][j]"></td>
            }
            else
            {
                <td><input type="text" class="cell" maxlength="1"></td>
            }
        }
    </tr>
    }
</table>